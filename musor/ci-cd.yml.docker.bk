name: API Security Analyzer CI/CD

on:
  push:
    branches: [ main, develop, feature/* ]
  pull_request:
    branches: [ main, develop ]
  schedule:
    - cron: '0 2 * * 1' # Ğ•Ğ¶ĞµĞ½ĞµĞ´ĞµĞ»ÑŒĞ½Ğ¾ Ğ² Ğ¿Ğ¾Ğ½ĞµĞ´ĞµĞ»ÑŒĞ½Ğ¸Ğº Ğ² 2:00

env:
  MAVEN_OPTS: -Dfile.encoding=UTF-8

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    
    strategy:
      matrix:
        java-version: [17, 21]
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        fetch-depth: 0
    
    - name: Setup Java ${{ matrix.java-version }}
      uses: actions/setup-java@v4
      with:
        java-version: ${{ matrix.java-version }}
        distribution: 'temurin'
        cache: 'maven'
    
    - name: Validate project structure
      run: |
        echo "ğŸ“ Project structure:"
        find . -name "*.java" | head -10
        echo "ğŸ“¦ Checking Maven modules..."
        ls -la
    
    - name: Build with Maven
      run: |
        mvn -B clean compile
        echo "âœ… Build successful"
    
    - name: Run unit tests
      run: |
        mvn -B test
        echo "âœ… Tests completed"
    
    - name: Run integration tests
      run: |
        mvn -B verify -DskipUnitTests
      continue-on-error: true
    
    - name: Generate test coverage report
      run: |
        mvn -B jacoco:report
        echo "ğŸ“Š Coverage report generated"
    
    - name: Upload test results
      uses: actions/upload-artifact@v4
      with:
        name: test-results-java-${{ matrix.java-version }}
        path: |
          target/surefire-reports/
          target/jacoco-reports/
        retention-days: 7

  security-analysis:
    runs-on: ubuntu-latest
    needs: build-and-test
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Setup Java 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: 'maven'
    
    - name: Build application
      run: |
        mvn -B clean package -DskipTests
        echo "ğŸ“¦ Application packaged"
    
    - name: Create test OpenAPI spec
      run: |
        mkdir -p test-specs
        cat > test-specs/test-api.yaml << EOF
        openapi: 3.1.0
        info:
          title: Test API for Security Analysis
          version: 1.0.0
        paths:
          /test:
            get:
              summary: Test endpoint
              responses:
                '200':
                  description: OK
        EOF
        echo "ğŸ“„ Test OpenAPI spec created"
    
    - name: Run security analysis
      run: |
        # Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµĞ¼ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ Ğ´Ğ»Ñ Ğ¾Ñ‚Ñ‡ĞµÑ‚Ğ¾Ğ²
        mkdir -p reports
        
        # Ğ—Ğ°Ğ¿ÑƒÑĞºĞ°ĞµĞ¼ Ğ°Ğ½Ğ°Ğ»Ğ¸Ğ· Ñ Ñ‚ĞµÑÑ‚Ğ¾Ğ²Ğ¾Ğ¹ ÑĞ¿ĞµÑ†Ğ¸Ñ„Ğ¸ĞºĞ°Ñ†Ğ¸ĞµĞ¹
        java -Dfile.encoding=UTF-8 \
             -jar target/api-security-analyzer-1.0.0.jar \
             --input test-specs/test-api.yaml \
             --output reports \
             --format html,json
        
        echo "ğŸ”’ Security analysis completed"
    
    - name: List generated reports
      run: |
        echo "ğŸ“‹ Generated reports:"
        find reports -type f -name "*.*" | head -20
    
    - name: Upload security reports
      uses: actions/upload-artifact@v4
      with:
        name: security-reports
        path: |
          reports/
          logs/
        retention-days: 30
    
    - name: Upload HTML report preview
      if: always()
      uses: actions/upload-artifact@v4
      with:
        name: security-html-report
        path: reports/security-analysis.html
        retention-days: 30

  code-quality:
    runs-on: ubuntu-latest
    needs: build-and-test
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Setup Java
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
    
    - name: Run static analysis
      run: |
        mvn -B checkstyle:checkstyle
        mvn -B spotbugs:spotbugs
        echo "ğŸ” Static analysis completed"
    
    - name: Run dependency check
      run: |
        mvn -B org.owasp:dependency-check-maven:check
        echo "ğŸ“¦ Dependency vulnerability check completed"
    
    - name: Upload code quality reports
      uses: actions/upload-artifact@v4
      with:
        name: code-quality-reports
        path: |
          target/checkstyle-result.xml
          target/spotbugs.xml
          target/dependency-check-report.html
        retention-days: 7

  docker-build:
    runs-on: ubuntu-latest
    needs: [build-and-test, security-analysis]
    if: github.ref == 'refs/heads/main'
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Setup Java
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
    
    - name: Build application
      run: mvn -B clean package -DskipTests
    
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3
    
    - name: Build Docker image
      uses: docker/build-push-action@v5
      with:
        context: .
        file: ./Dockerfile
        push: false
        tags: api-security-analyzer:latest
        cache-from: type=gha
        cache-to: type=gha,mode=max
    
    - name: Test Docker image
      run: |
        docker run --rm \
          -v $(pwd)/test-specs:/specs \
          -v $(pwd)/reports-docker:/reports \
          api-security-analyzer:latest \
          --input /specs/test-api.yaml \
          --output /reports
    
    - name: Log in to Docker Hub
      if: github.event_name != 'pull_request'
      uses: docker/login-action@v3
      with:
        username: ${{ secrets.DOCKERHUB_USERNAME }}
        password: ${{ secrets.DOCKERHUB_TOKEN }}
    
    - name: Push to Docker Hub
      if: github.event_name != 'pull_request'
      uses: docker/build-push-action@v5
      with:
        context: .
        file: ./Dockerfile
        push: true
        tags: |
          ${{ secrets.DOCKERHUB_USERNAME }}/api-security-analyzer:latest
          ${{ secrets.DOCKERHUB_USERNAME }}/api-security-analyzer:${{ github.sha }}
        cache-from: type=gha
        cache-to: type=gha,mode=max

  deploy-docs:
    runs-on: ubuntu-latest
    needs: [security-analysis, docker-build]
    if: github.ref == 'refs/heads/main'
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Download security reports
      uses: actions/download-artifact@v4
      with:
        name: security-reports
        path: gh-pages-reports
    
    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./gh-pages-reports
        destination_dir: ./reports
        keep_files: false

  notify:
    runs-on: ubuntu-latest
    needs: [build-and-test, security-analysis, code-quality]
    if: always()
    
    steps:
    - name: Notify Slack on failure
      if: failure()
      uses: 8398a7/action-slack@v3
      with:
        status: failure
        channel: '#ci-cd'
        webhook_url: ${{ secrets.SLACK_WEBHOOK }}
      env:
        SLACK_WEBHOOK_URL: ${{ secrets.SLACK_WEBHOOK }}